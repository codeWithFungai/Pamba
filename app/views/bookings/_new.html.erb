<div class='booking-container'>
  <div class='container'>
    <h3 class="card--title_1">Create a booking</h3>
    <div class='col'>
      <%= simple_form_for [@listing, @booking] do |f| %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <div class='btns-container' id='btn-booking-price-book'>
          <% if @booking.end_date && @booking.start_date %>
            <p  class="total--price" >Total Price:  â‚¬ <%= (@listing.price * (@booking.end_date - @booking.start_date).to_i) %> </p>
          <% end %>
          <%= f.button :submit, value: "Book", class: "btn btn-secondary", id: "submit--button"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
