<div class='container--listings--index'>
<div class='filter--div'>
  <%= render 'shared/filter_options' %>
</div>
<div class='container-fluid'>
  <div class='row'>
    <div class='col-lg-8'>
      <div class='row'>
        <% @listings.in_groups_of(2, false) do |group| %>
          <% group.each do |listing| %>
            <div class='col-md-6 col-lg-6 mb-4'>
              <%= link_to listing_path(listing), class: "no-decoration" do %>
                <%= render "shared/card", listing: listing %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
      <div class='col-lg-4'>
        <div style="position: sticky; top: 0;">
          <div class='map'>
            <div class='map' style="width: 100%; height: 600px;" data-controller="map" data-map-markers-value="<%= @markers.to_json %>" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
