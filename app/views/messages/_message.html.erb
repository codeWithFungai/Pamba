<div class="notification">
  <%= image_tag "fungai.jpg", class: "avatar-large"  %>
  <div class="notification-content">
    <div id="message-<%= message.id %>">
      <small>
        <strong><%= message.user.nickname %></strong>
        <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
      </small>
      <p><%= message.content %></p>
    </div>
  </div>
</div>
